{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        {
            "identifier": "http:allow-fetch, http:default",
            "allow": [
                {
                    "url": "https://*.*/*"
                },
                {
                    "url": "http://*.*/*"
                },
                {
                    "url": "https://*.*.*/*"
                }
            ],
            "deny": [
                {
                    "url": "https://private.tauri.app"
                }
            ]
        },
        {
            "identifier": "fs:allow-rename",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        },
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$APPDATA"
                },
                {
                    "path": "$APPDATA/**"
                }
            ]
        }
    ]
}