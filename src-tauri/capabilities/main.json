{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main","paste","pot","amusic","aria2"
  ],
  "permissions": [
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.*.*/*"
        },
        {
          "url": "https://*.*/*"
        },
        {
          "url": "https://*.*.*.*/*"
        },
        {
          "url": "https://*.*.*.*/*?*=*&*=*&*=*&*=*&*=*&*=*"
        },
        {
          "url": "https://*.*.*.*/**"
        },
        {
          "url": "https://api.myip.la/cn?json"
        },
        {
          "url": "https://*:*"
        },
        {
          "url": "http://*.*/*"
        }
      ],
      "deny": [
        {
          "url": "https://private.tauri.app"
        }
      ]
    },
    "http:allow-fetch",
    "http:allow-fetch-read-body",
    "http:allow-fetch-cancel",
    "http:allow-fetch-send",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "path:default",
    "event:default",
    "window:default",
    "window:allow-set-title",
    "window:allow-set-always-on-top",
    "window:allow-set-fullscreen",
    "window:allow-set-focus",
    "window:allow-show",
    "window:allow-set-resizable",
    "window:allow-set-size",
    "window:allow-set-position",
    "window:allow-set-icon",
    "window:allow-set-title",
    "window:allow-set-decorations",
    "window:allow-set-always-on-top",
    "window:allow-set-focus",
    "window:allow-set-skip-taskbar",
    "window:allow-set-visible-on-all-workspaces",
    "window:allow-hide",
    "window:allow-close",
    "window:allow-create",
    "window:allow-is-focused",
    "app:default",
    "app:allow-app-hide",
    "resources:default",
    "menu:default",
    "tray:default",
    "clipboard-manager:allow-read",
    "clipboard-manager:allow-write",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register-all",
    "global-shortcut:allow-unregister-all"
  ]
}